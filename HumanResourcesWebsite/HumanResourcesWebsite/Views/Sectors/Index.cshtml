
@using HumanResourcesWebsite.Models;
@model List<Sector>
@{
    ViewBag.Title = "Index";
    Layout = "~/Shared/_adminLayout.cshtml";
}

@using (Html.BeginForm("Index", "Sectors", FormMethod.Get))
{

<div style="margin-bottom:15px; margin-top:15px;">
    <b>Enter Sector Name: </b>
    @Html.Editor("ara")
    <input class="btn btn-info" type="submit" value="Search" />
</div>
}
<table class="table table-bordered">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>Sector ID</th>
        <th>Sector Name</th>
        <th>PhotoLink</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.SectorID</td>
            <td>@k.SectorName</td>
            <td>@k.PhotoLink</td>
            <td><a href="/Sectors/DeleteSector/@k.SectorID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Sectors/UpdateSector/@k.SectorID" class="btn btn-success">Update</a></td>


        </tr>

    }
</table>
<a href="/Sectors/AddSector/" class="btn btn-primary">ADD SECTOR</a>

