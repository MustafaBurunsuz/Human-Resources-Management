

@model HumanResourcesWebsite.Models.Company

@{
    ViewBag.Title = "Index";
    Layout = "~/Shared/CompanyLayout.cshtml";
}

<h2>Members İnfo</h2>

@using (Html.BeginForm("Index2", "CompanyPanel", FormMethod.Post))
{
    <table class="table table-hover" style="margin-top:30px">
        <tr>
            <td>
                <label style="font-weight:bolder"> Mail Adress:</label> @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>

            <td>
                <label>Company ID</label>
                @Html.TextBoxFor(x => x.CompanyID, new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <td>
                <label>Company Email</label>
                @Html.TextBoxFor(x => x.EMail, new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <td>
                <label>Company Name</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <td>
                <label>Company Adress</label>
                @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <td>
                <label>NumberOfWorkers</label>
                @Html.TextBoxFor(x => x.NumberOfWorkers, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label>Description</label>
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
            </td>

        <tr>
            <td>
                <label>Foundation Year</label>
                @Html.TextBoxFor(x => x.FoundationYear, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label>Sector</label>
                @Html.TextBoxFor(x => x.SectorID, new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <td>
                <button class="btn btn-warning">Update İnfo</button>
            </td>
        </tr>
    </table>
}