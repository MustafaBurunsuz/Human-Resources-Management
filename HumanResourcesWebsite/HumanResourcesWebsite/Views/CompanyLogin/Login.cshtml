<body>
    <h1>Company Login Panel</h1>
    <div class=" w3l-login-form">
        <h2>Login</h2>
        @using (Html.BeginForm("Login", "CompanyLogin", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>Mail Adress:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Your Mail Adress" required="required" name="EMail" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Your Password" required="required" name="Password" />
                </div>
            </div>
            <div class="forgot">
                <a href="#">Don't remember password</a>
                <p><input type="checkbox"> Remember me</p>
            </div>
            <button type="submit">Login</button>
        }
        <p class=" w3l-register-p">You Haven't Account?<a href="/CompanyRegister/Register/" class="register"> Register</a></p>

    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; Mind Units </p>
    </footer>

</body>

