@model HumanResourcesWebsite.Models.Contact
@{
    ViewBag.Title = "Contact";
    Layout = "~/Shared/_homeLayout.cshtml";
}
<section class="banner-bottom-wthree pt-lg-5 pt-md-3 pt-3">
    <div class="inner-sec-w3ls pt-md-5 pt-md-3 pt-3">
        <!---728x90--->
        <h3 class="tittle text-center mb-lg-5 mb-3 font-weight-bold">
            Contact Us
        </h3>
        <!---728x90--->
        <div class="container mt-5">
            <div class="address row mb-5">
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-3 address-left text-center">
                            <i class="far fa-map"></i>
                        </div>
                        <div class="col-md-9 address-right text-left">
                            <h6 class="ad-info text-uppercase mb-2 font-weight-bold">Address</h6>
                            <p> İstanbul, TURKEY</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-3 address-left text-center">
                            <i class="far fa-envelope"></i>
                        </div>
                        <div class="col-md-9 address-right text-left">
                            <h6 class="ad-info text-uppercase mb-2 font-weight-bold">Email</h6>
                            <p>
                                Email :
                                <a href="mailto:example@email.com"> mail@example.com</a>
                            </p>
                        </div>

                    </div>
                </div>
                <div class="col-lg-4 address-grid">
                    <div class="row address-info">
                        <div class="col-md-3 address-left text-center">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <div class="col-md-9 address-right text-left">
                            <h6 class="ad-info text-uppercase mb-2 font-weight-bold">Phone</h6>
                            <p>+90 536 XXX XX XX</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid ">
            <div class="row d-flext justify-content-center">
                <div class="col-md-6 main_grid_contact">
                    <div class="form">
                        <h4 class="mb-4 text-center">Send us a message</h4>

                        <form action="#" method="post">
                            <div class="form-group">
                                <label class="my-2">Name</label>
                                @Html.TextBoxFor(y => y.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(y => y.Name)
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(y => y.Mail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(y => y.Mail)
                            </div>
                            <div class="form-group">
                                <label>Title</label>                              
                                    @Html.TextBoxFor(y => y.Title, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(y => y.Title)                          
                            </div>
                            <div class="form-group">
                                <label>Message</label>
                                @Html.TextAreaFor(y => y.Message, new { @class = "form-control" })
                                @Html.ValidationMessageFor(y => y.Message)
                            </div>
                            <div class="input-group1">
                                <input class="form-control" type="submit" value="Submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

